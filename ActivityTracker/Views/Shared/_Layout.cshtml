<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/Chart.min.js"></script>
    @*<link href="../css/simple-sidebar.css" rel="stylesheet" type="text/css" />*@
    @*<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
        <link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>*@
</head>
<body style="background-image:url(https://scontent-waw1-1.xx.fbcdn.net/v/t1.15752-9/35191369_1959519384079268_3858024063771344896_n.png?_nc_cat=0&oh=9babb5f82b02c45ad2fed1f37aaf0909&oe=5BB0745C);" >
    <div class="navbar navbar-inverse navbar-fixed-top" >
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Activity Tracker", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row row-offcanvas row-offcanvas-left">
            @if (User.Identity.IsAuthenticated)
            {
                @Html.Partial("_UserPanel")

            }
            <div class="container body-content">
                @RenderBody()
            </div>
            <div class="footer navbar-fixed-bottom">
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Activity Tracker</p>
                </footer>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
<style>
    .footer {
        text-align: center;
        position: absolute;
        left: 0;
        bottom: 0;
        width: 100%;
        min-height: 60px;
    }
</style>